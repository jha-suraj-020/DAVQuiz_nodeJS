    <h1 class="text-center bg-primary text-white"><b>ScoreBoard</b></h1>
    <h3>Section:- Science</h3>
    <table class="table table-striped mb-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Class</th>
                <th scope="col">Sec.</th>
                <th scope="col">Admission No.</th>
                <th scope="col">Score</th>
                <th scope="col">Given Ans</th>
            </tr>
        </thead>
        <tbody>
            <% var i=1 %>
            <% scores.forEach(function(score){ %>
            <% if(score.user){ %>
            <% if(score.user.sec == "sci"){ %>
            <tr>
                <th scope="row"><%= i %></th>
                <% i = i+ 1 %>
                <td><%= score.user.name %></td>
                <td><%= score.user.classs %></td>
                <td><%= score.user.sec %></td>
                <td><%= score.user.admissionNo %></td>
                <td><%= score.yourScore %></td>
                <td><%= score.yourAns %></td>
            </tr>
            <% } %>
            <% } %>
            <% }) %>
        </tbody>
    </table>
